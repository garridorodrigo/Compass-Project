@model ProjetoCompass.Models.Funcionario
@*@{
        ViewData["Title"] = "Create";
    }*@

<h3>Adicionar Funcionário</h3>
<hr />
<div class="row">
    @*<div class="col-md-4">*@
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4 form-group">
            <label asp-for="Nome" class="control-label font-weight-bold"></label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o Nome" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Sobrenome" class="control-label font-weight-bold"></label>
            <input asp-for="Sobrenome" class="form-control" placeholder="Digite o Sobrenome" />
            <span asp-validation-for="Sobrenome" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="DtNascimento" class="control-label font-weight-bold"></label>
            <input class="form-control" type="date" asp-for="DtNascimento" placeholder="Digite a Data de Nascimento" />
            @*<input asp-for="DtNascimento" class="form-control" />*@
            <span asp-validation-for="DtNascimento" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Telefone" class="control-label font-weight-bold"></label>
            <input asp-for="Telefone" class="form-control" placeholder="Digite o Telefone"  />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Email" class="control-label font-weight-bold"></label>
            <input asp-for="Email" class="form-control" placeholder="Digite o E-mail"  />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Cargo" class="control-label font-weight-bold"></label>
            <input asp-for="Cargo" class="form-control"placeholder="Digite o Cargo"  />
            <span asp-validation-for="Cargo" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">

            <label asp-for="Salario" class="control-label font-weight-bold"></label>
            <input asp-for="Salario" class="form-control" placeholder="Digite o Salário"  />
            <span asp-validation-for="Salario" class="text-danger"></span>
        </div>

        <div class="col-md-12 form-group">
            <div class="text-right">
                <a asp-action="Index" type="button" class="btn btn-secondary" title="Voltar">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
@*</div>*@


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    form {
        display: contents;
    }
</style>



