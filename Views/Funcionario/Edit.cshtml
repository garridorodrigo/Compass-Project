@model ProjetoCompass.Models.Funcionario
@*@{
        ViewData["Title"] = "Edit";
    }*@

<h3>Editar Funcionário</h3>

<hr />
<div class="row">
    @*<div class="col-md-4">*@
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-md-4 form-group">
            <label asp-for="Nome" class="control-label  font-weight-bold"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Sobrenome" class="control-label  font-weight-bold"></label>
            <input asp-for="Sobrenome" class="form-control" />
            <span asp-validation-for="Sobrenome" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="DtNascimento" class="control-label  font-weight-bold"></label>
            <input class="form-control" type="date" asp-for="DtNascimento" />

            @*<input asp-for="DtNascimento" class="form-control" />*@
            <span asp-validation-for="DtNascimento" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Telefone" class="control-label  font-weight-bold"></label>
            <input asp-for="Telefone" class="form-control" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Email" class="control-label  font-weight-bold"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Cargo" class="control-label  font-weight-bold"></label>
            <input asp-for="Cargo" class="form-control" />
            <span asp-validation-for="Cargo" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Salario" class="control-label  font-weight-bold"></label>
            <input asp-for="Salario" class="form-control" />
            <span asp-validation-for="Salario" class="text-danger"></span>
        </div>
        <div class="col-md-12 form-group">
            <div class="text-right">

                <a asp-action="Index" type="button" class="btn btn-secondary" title="Voltar">Voltar</a>
                    

                <input type="submit" value="Salvar" class="btn btn-primary" />
          
            </div>
        </div>
    </form>
</div>
@*</div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    form {
        display: contents;
    }
</style>
